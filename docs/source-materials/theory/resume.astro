---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');
---

<Layout title="Resume — Anthony James Padavano" description="Creative technologist building autonomous creative systems. Resume and CV.">
  <Header />
  <main>
    <article class="resume">
      <div class="container container--narrow">

        <header class="resume__header">
          <h1>Anthony James Padavano</h1>
          <p class="resume__title">Creative Technologist</p>
          <div class="resume__contact">
            <span class="resume__location">New York City</span>
            <span class="resume__sep" aria-hidden="true">/</span>
            <a href="mailto:padavano.anthony@gmail.com">padavano.anthony@gmail.com</a>
            <span class="resume__sep" aria-hidden="true">/</span>
            <a href="https://github.com/meta-organvm" target="_blank" rel="noopener noreferrer">GitHub</a>
            <span class="resume__sep" aria-hidden="true">/</span>
            <a href={base}>Portfolio</a>
          </div>
          <div class="resume__downloads">
            <a class="resume__download" href={`${base}resume/Anthony_James_Padavano_CV.pdf`} download>
              Creative Technologist PDF
            </a>
            <a class="resume__download resume__download--alt" href={`${base}resume/Anthony_James_Padavano_Multimedia.pdf`} download>
              Multimedia Specialist PDF
            </a>
            <a class="resume__download resume__download--alt" href={`${base}resume/Anthony_James_Padavano_CV.docx`} download>
              DOCX (ATS-friendly)
            </a>
          </div>
        </header>

        <hr />

        <section class="resume__section prose">
          <h2>Summary</h2>
          <p>
            Creative technologist and artist-engineer with 10+ years across multimedia production, digital marketing, and systems design. Builds autonomous creative systems and treats their governance as artistic medium — most recently shipping an eight-organ orchestration system coordinating 81 repositories across 8 GitHub organizations with ~339K words of public documentation. Achieved +17.5M views and raised $2M across nonprofit and commercial projects. MFA in Creative Writing; Google-certified in UX Design, Digital Marketing, and Project Management; Meta Full-Stack Developer.
          </p>
        </section>

        <hr />

        <section class="resume__section">
          <h2>Skills</h2>
          <div class="resume__skills">
            <div class="resume__skill-group">
              <h3>Languages</h3>
              <div class="resume__tags">
                <span class="tag">Python</span>
                <span class="tag">TypeScript</span>
                <span class="tag">JavaScript</span>
                <span class="tag">Go</span>
                <span class="tag">Rust</span>
                <span class="tag">Bash</span>
                <span class="tag">SQL</span>
              </div>
            </div>
            <div class="resume__skill-group">
              <h3>Frameworks</h3>
              <div class="resume__tags">
                <span class="tag">Node.js</span>
                <span class="tag">Astro</span>
                <span class="tag">React</span>
                <span class="tag">Next.js</span>
                <span class="tag">FastAPI</span>
                <span class="tag">Express</span>
              </div>
            </div>
            <div class="resume__skill-group">
              <h3>AI / ML</h3>
              <div class="resume__tags">
                <span class="tag">LLM orchestration</span>
                <span class="tag">Multi-agent systems</span>
                <span class="tag">Prompt engineering</span>
                <span class="tag">RAG pipelines</span>
              </div>
            </div>
            <div class="resume__skill-group">
              <h3>Systems</h3>
              <div class="resume__tags">
                <span class="tag">GitHub Actions</span>
                <span class="tag">CI/CD</span>
                <span class="tag">Docker</span>
                <span class="tag">PostgreSQL</span>
                <span class="tag">Git</span>
              </div>
            </div>
            <div class="resume__skill-group">
              <h3>Creative</h3>
              <div class="resume__tags">
                <span class="tag">p5.js</span>
                <span class="tag">Generative art</span>
                <span class="tag">Audio synthesis</span>
                <span class="tag">Interactive installations</span>
              </div>
            </div>
            <div class="resume__skill-group">
              <h3>Marketing</h3>
              <div class="resume__tags">
                <span class="tag">Storytelling</span>
                <span class="tag">Content creation</span>
                <span class="tag">Social media</span>
                <span class="tag">SEO</span>
                <span class="tag">Performance analytics</span>
                <span class="tag">UI/UX design</span>
              </div>
            </div>
            <div class="resume__skill-group">
              <h3>Governance</h3>
              <div class="resume__tags">
                <span class="tag">Registry design</span>
                <span class="tag">Dependency validation</span>
                <span class="tag">State machines</span>
                <span class="tag">Documentation systems</span>
              </div>
            </div>
          </div>
        </section>

        <hr />

        <section class="resume__section prose">
          <h2>Selected Projects</h2>

          <div class="resume__project">
            <h3><a href={`${base}projects/eight-organ-system/`}>The Eight-Organ System</a></h3>
            <p class="resume__project-sub">Governance as creative infrastructure — 81 repos, 8 orgs</p>
            <ul>
              <li>Designed orchestration architecture coordinating theory, art, commerce, community, and marketing as a single governed system</li>
              <li>Built machine-readable registry, automated dependency validation (31 edges, zero back-edge violations), and promotion state machine</li>
              <li>Authored ~339K words of public documentation; 5 GitHub Actions workflows for autonomous governance</li>
            </ul>
          </div>

          <div class="resume__project">
            <h3><a href={`${base}projects/recursive-engine/`}>Recursive Engine (RE:GE)</a></h3>
            <p class="resume__project-sub">Symbolic operating system for myth and narrative — Python</p>
            <ul>
              <li>Implemented 21 organ handlers translating epistemological frameworks into executable code with a ritual syntax DSL</li>
              <li>1,254 tests, 85% coverage; myths, identities, and recursive structures as first-class computational objects</li>
            </ul>
          </div>

          <div class="resume__project">
            <h3><a href={`${base}projects/agentic-titan/`}>Agentic Titan</a></h3>
            <p class="resume__project-sub">Multi-agent orchestration — 9 topologies, 22 archetypes</p>
            <ul>
              <li>Polymorphic agent swarm architecture across 9 self-organizing topologies with 22 agent archetypes</li>
              <li>1,095+ tests across 18 implementation phases; model-agnostic (Anthropic, OpenAI, Ollama)</li>
            </ul>
          </div>

          <div class="resume__project">
            <h3><a href={`${base}projects/ai-conductor/`}>AI-Conductor Model</a></h3>
            <p class="resume__project-sub">Human-AI co-creation methodology</p>
            <ul>
              <li>Developed the workflow producing ~339K words: AI generates volume, human directs and refines</li>
              <li>Includes quality gates, template compliance validation, and automated link checking across 81 repos</li>
            </ul>
          </div>

          <div class="resume__project">
            <h3>Forward Funders — Marketing Overhaul</h3>
            <p class="resume__project-sub">Cold-calling to digital marketing — 328% ROI</p>
            <ul>
              <li>Transitioned client from in-person cold-calling to fully digital marketing; designed social media and Google Ads campaigns achieving 328% ROI</li>
            </ul>
          </div>

          <div class="resume__project">
            <h3>Boca Ballet Theatre — Digital Transformation</h3>
            <p class="resume__project-sub">Nonprofit survival during COVID-19</p>
            <ul>
              <li>Rebuilt website and social media channels during COVID-19; ad campaigns drove funding and enabled remote performances</li>
            </ul>
          </div>
        </section>

        <hr />

        <section class="resume__section prose">
          <h2>Experience</h2>

          <div class="resume__entry">
            <h3>Independent Creative Technologist</h3>
            <p class="resume__date">2021 — Present</p>
            <ul>
              <li>Designed and launched the eight-organ orchestration system coordinating 81 repositories across 8 GitHub organizations with automated dependency validation and ~339K words of documentation</li>
              <li>Built recursive-engine (1,254 tests, 85% coverage) — a symbolic operating system translating epistemological frameworks into executable Python</li>
              <li>Developed generative art and music systems, interactive installations, and AI-conductor workflow for human-AI co-creation</li>
            </ul>
          </div>

          <div class="resume__entry">
            <h3>Digital Marketing Manager</h3>
            <p class="resume__date">2023 — 2024 &middot; Miami Dade College Foundation</p>
            <ul>
              <li>Designed and executed digital campaigns increasing donor engagement by 32% and surpassing fundraising goals</li>
              <li>Rebuilt foundation website — 38% traffic growth, 22% improvement in donation conversions</li>
              <li>Produced multimedia storytelling content driving 28% increase in click-through rates</li>
              <li>Developed social media strategy boosting engagement rates across platforms by 23%</li>
              <li>Trained team members on advanced analytics tools — 20% efficiency boost in reporting</li>
            </ul>
          </div>

          <div class="resume__entry">
            <h3>Multimedia Specialist</h3>
            <p class="resume__date">2011 — Present &middot; AJP Media Arts</p>
            <p class="resume__clients">Arts in Boca, Boca Ballet Theatre, Cardboard Movie Company, Forward Funding, Flux Media, Lockbox Capital, Luxury Elevates, MindFinity, Nintendard, South Florida Luxury Real Estate, Spartan Permits, StrategicLever, Swamp Ape Review, Transcend Cosmetics, UltiTool Media</p>
            <ul>
              <li>Produced video, audio, and visual campaigns achieving 17.5M+ views and driving $2M in client fundraising and revenue</li>
              <li>Integrated SEO and paid media strategies achieving 290% ROI for key campaigns</li>
              <li>Launched and managed client websites with 42% engagement increase and 30% speed improvement</li>
              <li>Conducted A/B testing and performance analysis — 27% engagement boost across client portfolios</li>
              <li>Delivered intuitive UI/UX designs — 26% satisfaction increase, 35% retention improvement</li>
            </ul>
          </div>

          <div class="resume__entry">
            <h3>Instructor</h3>
            <p class="resume__date">2015 — Present &middot; Miami Dade College, FAU, Nova Southeastern, Keiser, Young Harris, Tarrant County CC, Broward College, Palm Beach State</p>
            <ul>
              <li>Designed and delivered 100+ composition courses to 2,000+ students with 85% above-average grade achievement</li>
              <li>Applied UX principles to create accessible course materials — 92% student approval rating</li>
              <li>Managed course lifecycle from concept to completion — 97% completion rate</li>
              <li>Enhanced lectures with multimedia tools — 22% increase in engagement</li>
              <li>Refined teaching methods using performance analytics — 24% improvement in student retention</li>
            </ul>
          </div>

          <div class="resume__entry">
            <h3>Project Manager</h3>
            <p class="resume__date">2007 — 2018 &middot; Majestic Design</p>
            <ul>
              <li>Led 50 commercial and residential construction projects from concept to completion — 90% on-time and within budget</li>
              <li>Collaborated with marketing teams on 3D renderings and video walkthroughs, securing 25% increase in repeat business</li>
              <li>Built and maintained strong stakeholder relationships — 88% satisfaction rate</li>
              <li>Implemented risk mitigation strategies reducing project delays by 15%; 93% met or exceeded standards</li>
            </ul>
          </div>
        </section>

        <hr />

        <section class="resume__section prose">
          <h2>Education</h2>
          <div class="resume__entry">
            <h3>M.F.A. Creative Writing</h3>
            <p class="resume__date">2015 — 2018 &middot; Florida Atlantic University</p>
          </div>
          <div class="resume__entry">
            <h3>B.A. English Literature</h3>
            <p class="resume__date">2010 — 2014 &middot; CUNY College of Staten Island</p>
          </div>
        </section>

        <hr />

        <section class="resume__section prose">
          <h2>Certifications</h2>
          <ul class="resume__certs">
            <li><strong>Full-Stack Developer</strong> — Meta <span class="resume__date-inline">2023 — 2024</span></li>
            <li><strong>UX Design</strong> — Google <span class="resume__date-inline">2022 — 2023</span></li>
            <li><strong>Digital Marketing &amp; E-commerce</strong> — Google <span class="resume__date-inline">2022 — 2023</span></li>
            <li><strong>Project Management</strong> — Google <span class="resume__date-inline">2022 — 2023</span></li>
          </ul>
        </section>

        <hr />

        <section class="resume__section">
          <h2>Links</h2>
          <ul class="resume__links">
            <li><a href={base}>Portfolio</a> — 4444j99.github.io/portfolio</li>
            <li><a href="https://github.com/meta-organvm" target="_blank" rel="noopener noreferrer">GitHub (system)</a> — meta-organvm</li>
            <li><a href="https://github.com/4444j99" target="_blank" rel="noopener noreferrer">GitHub (personal)</a> — 4444j99</li>
            <li><a href="mailto:hello@4444j.dev">Email</a> — hello@4444j.dev</li>
          </ul>
        </section>

      </div>
    </article>
  </main>
  <Footer />
</Layout>

<style>
  .resume {
    padding: var(--space-3xl) 0;
  }

  .resume__header {
    text-align: center;
    margin-bottom: var(--space-md);
  }

  .resume__header h1 {
    margin-bottom: var(--space-xs);
  }

  .resume__title {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--accent);
    margin-bottom: var(--space-md);
  }

  .resume__contact {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-sm);
    flex-wrap: wrap;
    margin-bottom: var(--space-md);
  }

  .resume__contact a {
    font-size: 0.85rem;
    color: var(--text-secondary);
    transition: color var(--transition-fast);
  }

  .resume__downloads {
    display: flex;
    justify-content: center;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .resume__download {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    padding: var(--space-xs) var(--space-md);
    border: 1px solid var(--accent);
    color: var(--accent);
    text-decoration: none;
    transition: background var(--transition-fast), color var(--transition-fast);
  }

  .resume__download:hover {
    background: var(--accent);
    color: var(--bg);
  }

  .resume__download--alt {
    border-color: var(--text-muted);
    color: var(--text-secondary);
  }

  .resume__download--alt:hover {
    background: var(--text-muted);
    color: var(--bg);
  }

  .resume__contact a:hover {
    color: var(--accent);
  }

  .resume__sep {
    color: var(--border);
    font-size: 0.8rem;
  }

  .resume__section {
    margin-bottom: var(--space-md);
  }

  .resume__section h2 {
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-muted);
    margin-bottom: var(--space-lg);
  }

  .resume__skills {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--space-lg);
  }

  .resume__skill-group h3 {
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--text-secondary);
    margin-bottom: var(--space-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .resume__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .resume__project {
    margin-bottom: var(--space-xl);
  }

  .resume__project h3 {
    margin-bottom: 0;
  }

  .resume__project-sub {
    font-size: 0.85rem;
    color: var(--text-muted);
    font-style: italic;
    margin-bottom: var(--space-sm);
  }

  .resume__entry {
    margin-bottom: var(--space-xl);
  }

  .resume__entry h3 {
    margin-bottom: 0;
  }

  .resume__date {
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-bottom: var(--space-sm);
  }

  .resume__clients {
    font-size: 0.8rem;
    color: var(--text-muted);
    font-style: italic;
    margin-bottom: var(--space-sm);
  }

  .resume__links {
    list-style: none;
    padding: 0;
  }

  .resume__links li {
    margin-bottom: var(--space-sm);
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .resume__location {
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  .resume__certs {
    list-style: none;
    padding: 0;
  }

  .resume__certs li {
    margin-bottom: var(--space-sm);
    color: var(--text-secondary);
  }

  .resume__date-inline {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin-left: var(--space-sm);
  }

  /* --- Print Styles --- */
  @media print {
    :global(body) {
      background: white;
      color: #111;
      font-size: 11pt;
      line-height: 1.5;
    }

    :global(.header),
    :global(.footer),
    .resume__downloads {
      display: none;
    }

    :global(hr) {
      border-color: #ddd;
    }

    :global(a) {
      color: #111;
      text-decoration: none;
    }

    :global(a[href^="http"])::after,
    :global(a[href^="mailto"])::after {
      content: " (" attr(href) ")";
      font-size: 0.75em;
      color: #666;
      word-break: break-all;
    }

    :global(.tag) {
      background: #f0f0f0;
      color: #333;
      border: 1px solid #ddd;
    }

    :global(h1, h2, h3, h4) {
      color: #111;
    }

    :global(p) {
      color: #333;
    }

    :global(li) {
      color: #333;
    }

    .resume {
      padding: 0;
    }

    .resume__title {
      color: #555;
    }

    .resume__contact a {
      color: #333;
    }

    .resume__sep {
      color: #999;
    }

    .resume__section h2 {
      color: #555;
    }

    .resume__skill-group h3 {
      color: #555;
    }

    .resume__project-sub,
    .resume__date {
      color: #666;
    }

    .resume__clients {
      color: #666;
    }

    .resume__links li {
      color: #333;
    }

    .resume__location {
      color: #333;
    }

    .resume__certs li {
      color: #333;
    }

    .resume__date-inline {
      color: #666;
    }

    .resume__entry,
    .resume__project {
      page-break-inside: avoid;
    }

    .resume__section {
      page-break-inside: avoid;
    }

    @page {
      size: letter;
      margin: 1cm;
      orphans: 3;
      widows: 3;
    }
  }
</style>
